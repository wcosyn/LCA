# return HO radial eigenfunctions with input of quantum numbers (n,l)
import math as m
import scipy as sp

def a(n,l,k):
	return (((-1)**k)/m.factoral(k))*(((2*m.factoral(n))/sp.gamma(n+l+1.5))**(1/2))*(sp.gamma(n+l+1.5)/(m.factoral(n-k)*sp.gamma(k+l+1.5))

def Eigenfunction(r,theta, phi, n,l,m):
	i = 0
	value = 0
	while (i<(n+1)):
		value =+ a(n,l,i)*(r**(2*k+l))*m.exp(-0.5*(r**2))
		i++
	return value*scipy.special.sph_harm(m,l,phi,theta)

		
		
	
	
